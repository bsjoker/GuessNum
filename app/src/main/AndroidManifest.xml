<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.funapps.gje">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".App"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges= "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".LoadActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter android:label="filter"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="com.funapps.gje"
                    android:scheme="app"/>
            </intent-filter>
        </activity>

        <activity-alias
            android:name="com.funapps.gje.default"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.monkey"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_monkey"
            android:label="Tricky Monkeys"
            android:roundIcon="@mipmap/ic_launcher_monkey_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.vegas"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_vegas"
            android:label="Vegas Treasure"
            android:roundIcon="@mipmap/ic_launcher_vegas_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.sevenshell"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_sevens"
            android:label="Sevens in Hell"
            android:roundIcon="@mipmap/ic_launcher_sevenshell_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.sevensruby"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_ruby"
            android:label="Ruby Sevens"
            android:roundIcon="@mipmap/ic_launcher_ruby_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.strawberry"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_strawberry"
            android:label="Sweet Strawberry"
            android:roundIcon="@mipmap/ic_launcher_strawberry_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.pharaon"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_pharaon"
            android:label="Pharaoh Mystery"
            android:roundIcon="@mipmap/ic_launcher_pharaon_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.shtirliz"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_shtirliz"
            android:label="Shtirlitz Attack"
            android:roundIcon="@mipmap/ic_launcher_shtirliz_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.funapps.gje.book"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_book"
            android:label="Book of Mystery Ra"
            android:roundIcon="@mipmap/ic_launcher_book_round"
            android:targetActivity=".LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".MyWebView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>